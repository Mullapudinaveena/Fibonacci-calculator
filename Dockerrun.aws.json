{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "naveenauta/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "naveenauta/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "naveenauta/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "naveenauta/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": {
                "hostPort": 80,
                "containerPort": 80
            },
            "links": ["client", "server"]
        }
    ]
}